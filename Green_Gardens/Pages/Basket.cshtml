@page
@model Green_Gardens.Pages.BasketModel
@{
    ViewData["Title"] = "Basket";
}

<table class="table">
    <thead>
        <tr>
            <th><h2 class="display-4">Basket</h2></th>
        </tr>

        <tr>
            <th>OrderID</th>
            <th>Email</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th></th>
        </tr>

    </thead>
    <tbody>

        @foreach (var order in Model.Order)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Customer.Email</td>
                <td>@order.Product.Name</td>
                <td>@order.Product.Price</td>
            </tr>
        }




    </tbody>
</table>