@page
@using Green_Gardens.Model
@using static Green_Gardens.Model.Customer
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Green Gardens</h1>
    
    <form method="get" asp-page="/Login">
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    @if (User.Identity.IsAuthenticated)
    {
        <form method="get" asp-page="/Logout">
            <button type="submit" class="btn btn-warning">Logout</button>
        </form>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>Check out our shop</th>
        </tr>
    </thead>
    <tbody>
            <tr>
            <td><img src="" alt="Product Image" style="width:100px"></td>

                <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-page="/Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="/Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
                
            </tr>
    </tbody>
</table>