@page "{id:guid}"
@model Green_Gardens.Pages.CustomerDeleteModel

<!--message appears before deleting a customer-->
<h2>Confirm Deletion</h2>
<p>Are you sure you want to delete this item?</p>
<!--shows specific customer info-->
<p><strong>Name:</strong> @Model.Customer.FirstName</p>
<p><strong>Email:</strong> @Model.Customer.Email</p>

<form method="post">
    <!--gets customer based on their id-->
    <input type="hidden" asp-for="Customer.CustomerId" />
    <!--delets customer-->
    <button type="submit" class="btn btn-danger">Delete</button>
    <!--returns user back to the admin page-->
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>