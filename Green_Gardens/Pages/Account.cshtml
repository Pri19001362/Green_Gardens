@page
@model Green_Gardens.Pages.AccountModel
@{
    ViewData["Title"] = "Account";
}

<h1 class="display-4" style="padding-bottom:10px;">Account</h1>

<table class="table" style="border: 2px solid black;">
    <thead style="background-color:#B3B3B3;">

        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Loyalty Points</th>
        </tr>

    </thead>
    <tbody>
        <!--Checks through all customers to find the customer that is logged in-->
        @foreach (var customer in Model.Customer )
        {
            //info that is displayed on account page
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.LoyaltyPoints</td>
            </tr>
        }
        



    </tbody>
</table>
