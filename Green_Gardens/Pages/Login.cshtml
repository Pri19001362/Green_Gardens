@page
@model Green_Gardens.Pages.LoginModel
@{
}
<h1>Login</h1>
<!--Appears when clicking login page-->
<div class="container border p-5" style="background-color:#B3B3B3; color:black;">
    <form method="post">
        <!-- Email Field -->
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <!-- Password Field -->
        <div class="form-group">
            <label>Password:</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>