@page
@model Green_Gardens.Pages.AddingProductModel
@{
}

<h1>Basket</h1>

<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />

    <!-- Name Field -->
    <div class="form-group">
        <label>Product Name:</label>
        <input asp-for="Product.Name" class="form-control" readonly />
    </div>

    <!-- Description Field -->
    <div class="form-group">
        <label>Product Description:</label>
        <input asp-for="Product.Description" class="form-control" readonly />
    </div>

    <!-- Price Field -->
    <div class="form-group">
        <label>Product Price:</label>
        <input asp-for="Product.Price" class="form-control" readonly />
    </div>

    <!-- Image Field -->
    <div class="form-group">
        <label>Product Image:</label>
        <input asp-for="Product.ImagePath" class="form-control" readonly />
    </div>

    <!-- Current Stock Field -->
    <div class="form-group">
        <label>Current Stock:</label>
        <input type="number" asp-for="Product.Stock" class="form-control" readonly />
    </div>

    <!-- Expected Stock Field -->
    <div class="form-group">
        <label>Expected Stock:</label>
        <input type="number" asp-for="Product.ExpectedStock" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Buy</button>
    <a asp-page="Products" class="btn btn-secondary">Cancel</a>
</form>